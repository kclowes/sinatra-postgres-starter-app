<link href='http://fonts.googleapis.com/css?family=Sniglet' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="css/application.css">
<h3 class="title">Log In</h3>
<% if need_error %>
  <%= error %>
<% end %>
<form method="post" action="/login">
  <table>
    <tr>
      <td class="column2">Email</td>
      <td><input class="column1" type="text" name="Email"></td>
    </tr>


    <tr>
      <td class="column2">Password</td>
      <td><input class="column1" type="password" name="Password"></td>
    </tr>
    <tr>
      <td class="column2"></td>
      <td><input class="column1 button" type="submit" value="Login"></td>
    </tr>
  </table>
</form>

